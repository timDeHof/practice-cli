{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node LTS",
	"_version": "20.1.0",
	"compilerOptions": {
		"lib": ["es2023"],
		"outDir": "dist",
		"module": "preserve",
		"target": "es2022",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "Bundler",
		"noUncheckedIndexedAccess": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
